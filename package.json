{
  "name": "ts-express-starter",
  "version": "1.0.0",
  "description": "starter kit for typescript express",
  "main": "dist/server.js",
  "scripts": {
    "setup": "cp ./.env.example ./.env && npm install",
    "build": "rm -rf ./dist/* && tsc && cp -r ./src/views ./src/public ./dist",
    "start": "node dist/server.js",
    "serve": "nodemon --watch src -e ts,ejs --exec \"npm run build && npm run start\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "typescript",
    "express",
    "starter"
  ],
  "author": "Ismail",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/ejs": "^3.0.7",
    "@types/express": "^4.17.13",
    "concurrently": "^6.2.0",
    "nodemon": "^2.0.12",
    "typescript": "^4.3.5"
  }
}
